extend layout

block content
	.container
		h1 #{title}
		form(method='post', action='/categories/edit/' + category_id)
			.form-group
				label Title:
				input.form-control(name='title', type='text', value=category.title)
			.form-group
				label Description:
				textarea.form-control(name="description")
			input.btn.btn-primary(type='submit', name='submit', value='Save')
			a.btn.btn-danger(href='/manage/categories') Back